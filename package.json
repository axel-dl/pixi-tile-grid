{
  "name": "pixi-tile-grid",
  "version": "1.0.1-beta.0",
  "description": "A high-performance, single-responsibility tile rendering library for PixiJS v8. PixiTileGrid is designed as a pure \"View\" component that efficiently visualizes grid-based tile data while maintaining complete separation from game logic.",
  "type": "module",
  "main": "./dist/pixi-tile-grid.cjs.js",
  "module": "./dist/pixi-tile-grid.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/pixi-tile-grid.es.js",
      "require": "./dist/pixi-tile-grid.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
    ,"release": "node ./scripts/release.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/axel-dl/pixi-tile-grid.git"
  },
  "keywords": [
    "pixi",
    "pixijs",
    "pixi-v8",
    "tile",
    "tilemap",
    "tileset",
    "grid",
    "rendering",
    "game",
    "2d",
    "webgl",
    "canvas",
    "typescript",
    "layer",
    "spritesheet"
  ],
  "author": "Axel Delgadillo axeld844@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/axel-dl/pixi-tile-grid/issues"
  },
  "homepage": "https://github.com/axel-dl/pixi-tile-grid#readme",
  "peerDependencies": {
    "pixi.js": "^8.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.0",
    "jest": "^30.2.0",
    "pixi.js": "^8.13.2",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-plugin-dts": "^4.5.4"
  }
}
